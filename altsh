#!/bin/bash
function print_help()
{
    printf "Usage: `echo $0 | rev | awk -F '/' '{print $1}' | rev` -l [file with subdomains]\n"
    printf "Flags:\n"
    printf "\t-h Help Menu\n"
    printf "\t-l takes a list of subdomains\t(required)\n"
}


while getopts 'hbl:o:w:' opt; do
    case $opt in
        h) print_help; exit ;;
        l) SUBS=$OPTARG ;;
        b) BRUTE_LARGE=false ;;
        ?) print_help; exit 1 ;;
        *) print_help; exit 1 ;;
    esac
done

shift $(( OPTIND - 1 ))
if [ -z "$SUBS" ]; then
    # If the file path was not provided as a flag, read it from stdin
    print_help >&2
    exit 1
fi

if [ ! -f $SUBS ]; then
    printf "$SUBS could not be found, does file exist?\n" >&2
    exit 1
fi

# Grab domain name 
DOMAIN=$(awk 'NR==1 {print; exit}' $SUBS | awk -F. '{print $(NF-1)}')

RESOLVERS_PATH="/tmp/resolvers.txt"
BRUTE_WORDLIST="~/Hacking/wordlists/assetnotes/best-dns-wordlist.txt"
OUTPUT_ALIVE="$DOMAIN-subs-alive.txt"
OUTPUT_KEYWORDS="$DOMAIN-keywords.txt"

# Grab latest public dns servers
curl -s 'https://public-dns.info/nameservers.txt' > $RESOLVERS_PATH
{
# Brute force subdomains
if ! $BRUTE_LARGE; then
    dnsx -d $DOMAIN -w $BRUTE_WORDLIST -r $RESOLVERS_PATH -silent -a -resp 
else
    printf "Skipping bruteforcing with large list: $BRUTE_WORDLIST\n" >&2
fi

# Grab keywords from a list of subdomains
cat $SUBS | sh skeywords.sh | sort -u | anew $OUTPUT_KEYWORDS &> /dev/null

# Resolve subdomains generated from keywords
gotator -sub $SUBS -perm $OUTPUT_KEYWORDS -silent -depth 1 -adv | dnsx -silent -a -resp -r $RESOLVERS_PATH

# Generate non target specific alteration and resolve 
cat $SUBS | alterx -enrich -silent | dnsx -silent -a -resp -r $RESOLVERS_PATH 
}

